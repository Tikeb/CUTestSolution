@model UI.Models.ViewModels.Customers.CustomerViewModel

<form asp-controller="customers" asp-action="Add" method="post">
    <input asp-for="CustomerId"  />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span> @*AW: Added validation for Name*@
    </div>
    <div class="form-group">
        <label asp-for="CompanyRegistrationNumber" class="control-label"></label>
        <input asp-for="CompanyRegistrationNumber" class="form-control" />
        <span asp-validation-for="CompanyRegistrationNumber"></span> @*AW: Added validation for CompanyRegistrationNumber*@
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="control-label"></label>
        <input asp-for="IsActive" class="form-control" />
    </div>
    @*AW: Added new fields for IncorporationDate and Turnover*@
    <div class="form-group">
        <label asp-for="IncorporationDate" class="control-label"></label>
        <input asp-for="IncorporationDate" class="form-control" />
        <span asp-validation-for="IncorporationDate"></span>
    </div>
    <div class="form-group">
        <label asp-for="Turnover" class="control-label"></label>
        <input asp-for="Turnover" class="form-control" />
        <span asp-validation-for="Turnover"></span>
    </div>
    <button type="submit">Save</button>
</form>